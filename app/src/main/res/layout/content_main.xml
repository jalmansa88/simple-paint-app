<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lordneru.pruebas.paint.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New ImageButton"
            android:src="@drawable/ico_nuevo_dibujo"
            android:id="@+id/ibNuevo" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New ImageButton"
            android:src="@drawable/ico_lapiz"
            android:id="@+id/ibTrazo" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New ImageButton"
            android:src="@drawable/ico_goma"
            android:id="@+id/ibBorrar" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New ImageButton"
            android:src="@drawable/ico_guardar"
            android:id="@+id/ibGuardar" />
    </LinearLayout>

    <com.lordneru.pruebas.paint.Lienzo
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:id="@+id/lienzo"
        android:background="@color/Lienzo"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="match_parent">

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:background="#FF000000"
            android:tag="#FF000000"
            android:id="@+id/botonNegro" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:background="#FFFF0000"
            android:tag="#FFFF0000"
            android:id="@+id/botonRojo" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:background="#FF00FF00"
            android:tag="#FF00FF00"
            android:id="@+id/botonVerde" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:background="#2314ac"
            android:tag="#2314ac"
            android:id="@+id/botonAzul" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:background="#fcef00"
            android:tag="#fcef00"
            android:id="@+id/botonAmarillo" />
    </LinearLayout>

</LinearLayout>
